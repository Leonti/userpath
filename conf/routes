# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# View
GET     /                           controllers.Application.index
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# User
GET      /user                                   controllers.Users.index()
POST     /user                                   controllers.Users.create()
GET      /user/:id                               controllers.Users.view(id: ObjectId)
PUT      /user/:id                               controllers.Users.update(id: ObjectId)
DELETE   /user/:id                               controllers.Users.delete(id: ObjectId)
